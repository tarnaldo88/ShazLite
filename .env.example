# Audio Fingerprinting System Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_PASSWORD=your_secure_database_password_here
DATABASE_URL=postgresql://audio_user:${DB_PASSWORD}@localhost:5432/audio_fingerprinting
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_TITLE=Audio Fingerprinting API
API_VERSION=1.0.0
API_DESCRIPTION=Audio fingerprinting and song identification service
HOST=0.0.0.0
PORT=8000
DEBUG=false
RELOAD=false
ENVIRONMENT=production

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate a secure admin API key for production
ADMIN_API_KEY=your_secure_admin_api_key_here

# Update these for production with your actual domain names
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Secret key for session management (generate a secure random key)
SECRET_KEY=your_secret_key_here

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Maximum request size (50MB for audio uploads)
MAX_REQUEST_SIZE=52428800

# Timeout settings (in seconds)
REQUEST_TIMEOUT_SECONDS=30
AUDIO_PROCESSING_TIMEOUT_SECONDS=10
DATABASE_QUERY_TIMEOUT_SECONDS=5

# Audio processing limits
MAX_AUDIO_DURATION_MS=30000
SUPPORTED_AUDIO_FORMATS=wav,mp3,flac,m4a

# =============================================================================
# AUDIO PROCESSING CONFIGURATION
# =============================================================================
AUDIO_SAMPLE_RATE=44100
FINGERPRINT_CONFIDENCE_THRESHOLD=0.3
MAX_FINGERPRINT_MATCHES=1000
MIN_FINGERPRINT_MATCHES=5

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# REDIS CONFIGURATION (Optional - for caching)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_ADMIN_ENDPOINTS=true

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# =============================================================================
# DEVELOPMENT SETTINGS (Override for development)
# =============================================================================
# Uncomment and modify these for development environment
# DEBUG=true
# LOG_LEVEL=DEBUG
# RELOAD=true
# ENVIRONMENT=development
# ALLOWED_HOSTS=*
# CORS_ORIGINS=*

# =============================================================================
# SSL/TLS CONFIGURATION (For HTTPS)
# =============================================================================
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
# SSL_CA_PATH=/path/to/ca.pem

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# SENTRY_DSN=https://your-sentry-dsn-here
# PROMETHEUS_GATEWAY_URL=http://prometheus-pushgateway:9091

# =============================================================================
# DOCKER COMPOSE OVERRIDES
# =============================================================================
# These variables are used by docker-compose
COMPOSE_PROJECT_NAME=audio_fingerprinting
COMPOSE_FILE=docker-compose.yml

# =============================================================================
# NOTES
# =============================================================================
# 1. Generate secure passwords and API keys for production
# 2. Update ALLOWED_HOSTS and CORS_ORIGINS with your actual domains
# 3. Set up proper SSL certificates for HTTPS in production
# 4. Configure monitoring and alerting for production deployments
# 5. Regularly backup your database and configuration files