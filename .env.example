# Database configuration
DATABASE_URL=postgresql://username:password@localhost:5432/audio_fingerprinting
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=audio_fingerprinting
DATABASE_USER=username
DATABASE_PASSWORD=password

# API configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false
RELOAD=false
API_TITLE="Audio Fingerprinting API"
API_VERSION="1.0.0"
API_DESCRIPTION="API for audio fingerprinting and song identification"

# Security configuration
ALLOWED_HOSTS=["*"]
CORS_ORIGINS=["*"]
MAX_REQUEST_SIZE=10485760

# Audio processing configuration
MAX_AUDIO_DURATION_MS=30000
SUPPORTED_AUDIO_FORMATS=["wav","mp3","flac","m4a"]
AUDIO_SAMPLE_RATE=44100
FINGERPRINT_CONFIDENCE_THRESHOLD=0.1
MAX_FINGERPRINT_MATCHES=1000

# Performance configuration
REQUEST_TIMEOUT_SECONDS=30
AUDIO_PROCESSING_TIMEOUT_SECONDS=10
DATABASE_QUERY_TIMEOUT_SECONDS=5

# Database pool configuration
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# Admin configuration
ADMIN_API_KEY=your-admin-api-key-here
ENABLE_ADMIN_ENDPOINTS=true

# Security configuration
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Client configuration
CLIENT_API_BASE_URL=http://localhost:8000/api/v1